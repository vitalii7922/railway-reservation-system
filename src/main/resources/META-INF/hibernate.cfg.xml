<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.password">0000</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/railways?serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class="com.tsystems.project.domain.Passenger"/>
        <mapping class="com.tsystems.project.domain.Schedule"/>
        <mapping class="com.tsystems.project.domain.Station"/>
        <mapping class="com.tsystems.project.domain.Ticket"/>
        <mapping class="com.tsystems.project.domain.Train"/>
        <mapping class="com.tsystems.project.domain.User"/>
    </session-factory>
</hibernate-configuration>